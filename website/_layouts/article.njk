---
layout: page
permalink: articles/{{ title | slugify }}/index.html
---
<div class="flow-large">
    <article data-js-article="data-js-article" class="article flow h-entry">
        <header class="flow-small">
            <h1 class="headline p-name glitch" data-glitch="{{ title | safe }}">
                {{ title | safe }}
            </h1>

            <a class="article__link u-url" href="{{ site.url }}{{ page.url }}">
                <time datetime="{{ date | w3DateFilter }}" class="dt-published">{{ date | longDate }}</time>
            </a>
        </header>

        {% include "readingIndicator/readingIndicatorMarkup.njk" %}

        <div class="flow e-content">
            {% if excerpt %}
                <p class="article__excerpt">{{ excerpt }}</p>
            {% endif %}

            {{ content | safe }}
        </div>
    </article>

    <msme-sharing-button
        data-buttontext="share this page"
        data-buttonclass="icon-button icon-button--has-text"
        data-sharing-url="{{ site.url }}{{ page.url }}"
        data-sharing-title="{{ title | safe }}"
        data-sharing-text="{{ title | safe }}"
    ></msme-sharing-button>

    {% include '_webmentionsArticle.njk' %}
    {% include '_recentArticles.njk' %}
</div>

{% include "readingIndicator/readingIndicatorJs.njk" %}

{% include "jsonld/blogposting.njk" %}

<script src="/msme-sharing-button.js" defer></script>
