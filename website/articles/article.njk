---
layout: layout
pagination:
    data: articlesFromWordPress
    size: 1
    alias: article
permalink: articles/{{ article.slug }}/index.html
---

{{ 'website/_source/scss/article.scss' | compileSCSS | safe }}

<article data-js-article class="article">
    <h1 class="headline">{{ article.title }}</h1>
    <time datetime="{{ article.date }}" class="article__date">{{ article.formattedDate }}</time>

    {% include "../_includes/readingIndicator/readingIndicatorMarkup.njk" %}

    <div class="article__excerpt">{{ article.excerpt | safe }}</div>
    
    {{ article.content | safe }}

    {% if article.content.includes('language-')%}
        {{ 'website/_source/scss/prism.scss' | compileSCSS | safe }}
    {% endif %}
</article>

{% include 'website/_includes/sharingButton.njk' %}
{% include 'website/_includes/webmentions.njk' %}

{% include "../_includes/readingIndicator/readingIndicatorJs.njk" %}