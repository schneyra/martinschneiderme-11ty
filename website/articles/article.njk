---
layout: layout
pagination:
    data: articles
    size: 1
    alias: article
permalink: articles/{{ article.slug }}/index.html
---

<article data-js-article class="article flow h-entry">
    <header class="flow-small">
        <h1 class="headline p-name">{{ article.title | safe }}</h1>
        
        <a class="article__link u-url" href="{{ site.url }}/articles/{{ article.slug }}/">
            <time datetime="{{ article.date }}" class="dt-published">{{ article.formattedDate }}</time>
        </a>
    </header>

    {% include "website/_includes/readingIndicator/readingIndicatorMarkup.njk" %}
    
    <div class="flow e-content">
        <div class="article__excerpt">{{ article.excerpt | safe }}</div>
    
        {{ article.content | safe }}
    </div>
</article>

{% include 'website/_includes/sharingButton.njk' %}
{% include 'website/_includes/webmentionsArticle.njk' %}

{% include "website/_includes/readingIndicator/readingIndicatorJs.njk" %}