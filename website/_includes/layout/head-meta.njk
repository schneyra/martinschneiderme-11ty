{% set absoluteUrl = site.url ~ page.url  %}

{%- if metaDescription -%}
    {% set description = metaDescription %}
{% elseif metaDescription %}
    {% set description = metaDescription %}
{% elseif excerpt %}
    {% set description = excerpt %}
{% else %}
    {% set description = site.defaultDescription %}
{%- endif -%}

<meta name="theme-color" content="hsl(240, 13%, 98%)">
<meta name="generator" content="{{ eleventy.generator }}">

<link href="/favicon.ico" rel="shortcut icon" type="image/x-icon">
<link href="/favicon.ico" rel="icon" type="image/x-icon">

<link rel="apple-touch-icon" type="image/png" href="/images/logo192.png"/>
<link rel="manifest" href="/manifest.json" crossorigin="use-credentials"/>

<link rel="webmention" href="https://webmention.io/martinschneider.me/webmention"/>
<link rel="pingback" href="https://webmention.io/martinschneider.me/xmlrpc"/>

<meta name="google-site-verification" content="q30M0p1A4chHEQhW3ypsQYO7sz1EU7ACd3ng6IXqu-I"/>

{% if metaRobots %}
    <meta name="robots" content="{{ metaRobots }}"/>
{% endif %}

<link rel="canonical" href="{{ absoluteUrl }}"/>

<meta name="description" content="{{ description | stripTags }}"/>

<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="{{ absoluteUrl }}">
<meta property="twitter:title" content="{{ title }}{% if title %} &rsaquo; {% endif %}{{ site.name }}">
<meta property="twitter:description" content="{{ description | stripTags }}">

{% if title %}
    <meta property="twitter:image" content="https://martinschneider.me{{ title | createOgImage }}">
{% else %}
    <meta property="twitter:image" content="https://martinschneider.me{{ "Martin Schneider Frontend Developer" | createOgImage }}">
{% endif %}
