{% if pagination.hrefs | length > 1 %}
    <ul class="pagination">
        {% if pagination.previousPageHref %}
            <li>
                <a href="{{ pagination.previousPageHref }}">&laquo; Previous page</a>
            </li>
        {% endif %}
        {% if pagination.nextPageHref %}
            <li class="pagination__next">
                <a href="{{ pagination.nextPageHref }}">Next page &raquo;</a>
            </li>
        {% endif %}
    </ul>
{% endif %}